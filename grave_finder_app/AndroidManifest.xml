<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.itiner.grave"
    android:installLocation="auto"
    android:versionCode="8"
    android:versionName="2.1" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light" >
        <uses-library android:name="com.google.android.maps" />

        <activity android:name="pl.itiner.map.GraveMap" />
        <activity
            android:name=".SearchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GenericAbout"
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".About"
            android:icon="@drawable/icon"
            android:label="@string/app_name" >
        </activity>
 
        <activity
            android:name="pl.itiner.nutiteq.NutiteqMap"
            android:label="@string/app_name" >
        </activity>

        <provider
            android:name="pl.itiner.db.GraveFinderProvider"
            android:authorities="pl.itiner.grave.GraveFinderProvider"
            android:exported="false" >
        </provider>

        <service android:name="pl.itiner.fetch.JsonFetchService" />
    </application>

</manifest>